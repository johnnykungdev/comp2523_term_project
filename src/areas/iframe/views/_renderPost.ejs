<% if (post.hasOwnProperty('originalDate')) { %>

<h2><%= user.username %> reposted at <%= post.createdAt %> &nbsp; <i class="oop_remove_repost fa fa-trash"></i></h2>
<div class="repost_content">
  <% } %> <% if (post.hasOwnProperty('originalDate')) { %>

  <div class="post_content flex bg-gray-100 mb-4 rounded-lg ml-10">
    <% } else { %>

    <div class="post_content flex bg-gray-100 mb-4 rounded-lg">
      <% } %>

      <div class="w-1/8 text-right pl-3 pt-3">
        <div>
          <a href="#"
            ><img
              src="https://user-images.githubusercontent.com/76543451/103982284-0a6f0b00-5138-11eb-872b-0b9e70fc5c25.gif"
              alt="avatar"
              class="rounded-full h-12 w-12 mr-2"
          /></a>
        </div>
      </div>

      <div class="w-7/8 p-3 pl-0">
        <!-- <div class="text-xs text-grey-dark">Reposted</div> -->
        <div class="flex justify-between">
          <div>
            <span class="font-bold"><a href="#" class="text-black"><%= post.username %></a></span>
            <% if (post.hasOwnProperty('originalDate')) { %>

            <span class="text-grey-dark"><%= post.originalDate %></span>

            <% } else { %>

            <span class="text-grey-dark"><%= post.createdAt %></span>

            <% } %>
          </div>
        </div>
        <div>
          <div class="mb-4">
            <p class="mb-6"><%= post.message %></p>
          </div>
          <div class="pb-2 flex">
            <span class="mr-8"
              ><a
                href="/iframe/post/<%= post.id %>"
                id="n_cmts"
                class="text-grey-dark hover:no-underline hover:text-blue-light flex"
                ><i class="fa fa-comment fa-lg mr-2"></i>
                <p><%= post.commentList.length %></p>
              </a></span
            >
            <span class="mr-8">
              <!-- <form action="/interact/repost" method="post"> -->
              <form class="<%= post.id %> oop_repost_form">
                <!-- <input hidden class="oop_post_username" type="text" name="username" value="<%= post.username %>" />
                <input hidden class="oop_post_id" type="text" name="post_id" value="<%= post.id %>" /> -->

                <button
                  class="oop_repost_btn text-pink-500 background-transparent font-bold uppercase px-6 py-2 text-sm outline-none focus:outline-none mr-1 mb-1"
                  style="transition: all 0.15s ease"
                  type="submit"
                >
                  <i class="fa fa-retweet fa-lg mr-2"></i> <%= post.reposts %>
                </button>
              </form>
            </span>
            <span class="likes mr-8">
              <button class="flex">
                <i class="oop_like_heart fa fa-heart-o fa-lg mr-2"></i>
                <p class="nlikes"><%= post.likes %></p>
              </button>
            </span>
          </div>
        </div>
      </div>

      <div>
        <i class="oop_remove_post fa fa-trash"></i>
      </div>
    </div>

    <% if (post.hasOwnProperty('originalDate')) { %>
  </div>

  <% } %>
</div>
